{% extends 'base.html.twig' %}

{% block title %}Mon Espace Prestataire{% endblock %}

{% block stylesheets %}
<style>

/* ==========================
   HEADER SECTION
========================== */
.hero-banner {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40px 0;
    margin-bottom: 30px;
    border-radius: 0 0 30px 30px;
    color: white;
}

.profile-header {
    display: flex;
    align-items: center;
    gap: 25px;
}

.profile-avatar {
    width: 100px;
    height: 100px;
    border-radius: 20px;
    background: rgba(255,255,255,0.2);
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    border: 4px solid rgba(255,255,255,0.3);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
}

.profile-info h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 8px;
}

.profile-info .subtitle {
    font-size: 1.1rem;
    opacity: 0.95;
}

.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
    margin-top: 10px;
}

.status-badge.disponible {
    background: rgba(40, 199, 111, 0.2);
    border: 2px solid rgba(40, 199, 111, 0.5);
}

.status-badge.occupe {
    background: rgba(255, 177, 66, 0.2);
    border: 2px solid rgba(255, 177, 66, 0.5);
}

.status-badge.vacances {
    background: rgba(149, 165, 166, 0.2);
    border: 2px solid rgba(149, 165, 166, 0.5);
}

.status-indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

/* ==========================
   STATS CARDS
========================== */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.stat-card {
    background: white;
    border-radius: 20px;
    padding: 30px;
    box-shadow: var(--shadow);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    transform: scaleX(0);
    transition: transform 0.3s;
}

.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-hover);
}

.stat-card:hover::before {
    transform: scaleX(1);
}

.stat-icon {
    width: 60px;
    height: 60px;
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    margin-bottom: 15px;
}

.stat-icon.yellow {
    background: linear-gradient(135deg, #FFD93D 0%, #FFB000 100%);
    color: white;
}

.stat-icon.blue {
    background: linear-gradient(135deg, #6DD5FA 0%, #2980B9 100%);
    color: white;
}

.stat-icon.green {
    background: linear-gradient(135deg, #84FAB0 0%, #8FD3F4 100%);
    color: white;
}

.stat-value {
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--dark);
    margin: 10px 0 5px;
}

.stat-label {
    color: #7F8C8D;
    font-size: 0.95rem;
    font-weight: 500;
}

/* ==========================
   CONTENT CARDS
========================== */
.content-card {
    background: white;
    border-radius: 20px;
    box-shadow: var(--shadow);
    margin-bottom: 25px;
    overflow: hidden;
}

.card-header-custom {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: black;
    padding: 25px;
    border: none;
}

.card-header-custom h5 {
    margin: 0;
    font-size: 1.3rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 12px;
}

.card-body-custom {
    padding: 30px;
}

/* ==========================
   FORMS
========================== */
.form-label {
    font-weight: 600;
    color: var(--dark);
    margin-bottom: 8px;
    font-size: 0.95rem;
}

.form-control, .form-select {
    border: 2px solid #E8ECF1;
    border-radius: 12px;
    padding: 12px 18px;
    font-size: 0.95rem;
    transition: all 0.3s;
    background: #F8F9FC;
    width: 100%;
}

.form-control:focus, .form-select:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(0, 212, 170, 0.1);
    background: white;
    width: 100%;
}

textarea.form-control {
    min-height: 120px;
    resize: vertical;
    width: 100%;
}

/* ==========================
   BUTTONS
========================== */
.btn-primary-custom {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    border: none;
    color: black !important;
    padding: 14px 35px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(0, 212, 170, 0.3);
    text-decoration: none;
}

.btn-primary-custom:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(0, 212, 170, 0.4);
    color: white !important;
}

.btn-primary-custom i {
    color: white !important;
}

.btn-secondary-custom {
    background: white;
    border: 2px solid var(--primary);
    color: var(--primary);
    padding: 14px 35px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s;
}

.btn-secondary-custom:hover {
    background: var(--primary);
    color: white;
}

.btn-logout {
    background: linear-gradient(135deg, #FF6B6B 0%, #EE5A6F 100%);
    border: none;
    color: white !important;
    padding: 12px 30px;
    border-radius: 12px;
    font-weight: 600;
    width: 100%;
    margin-top: 20px;
    transition: all 0.3s;
    text-decoration: none;
}

.btn-logout:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
    color: white !important;
}

.btn-logout i {
    color: white !important;
}

/* ==========================
   QUICK ACTIONS
========================== */
.quick-actions {
    background: white;
    border-radius: 20px;
    padding: 25px;
    box-shadow: var(--shadow);
    margin-bottom: 25px;
}

.quick-actions h6 {
    font-weight: 700;
    color: var(--dark);
    margin-bottom: 20px;
    font-size: 1.1rem;
}

.action-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
}

.action-btn {
    background: var(--light-bg);
    border: 2px solid transparent;
    border-radius: 12px;
    padding: 18px 15px;
    text-align: center;
    transition: all 0.3s;
    text-decoration: none;
    color: var(--dark);
    font-weight: 600;
    font-size: 0.9rem;
}

.action-btn:hover {
    border-color: var(--primary);
    background: white;
    color: var(--primary);
    transform: translateY(-3px);
    box-shadow: var(--shadow);
}

.action-btn i {
    display: block;
    font-size: 1.8rem;
    margin-bottom: 8px;
}

/* ==========================
   RESPONSIVE
========================== */
@media (max-width: 768px) {
    .hero-banner {
        padding: 25px 0;
    }
    
    .profile-header {
        flex-direction: column;
        text-align: center;
    }
    
    .profile-avatar {
        width: 80px;
        height: 80px;
        font-size: 2rem;
    }
    
    .profile-info h1 {
        font-size: 1.5rem;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .stat-value {
        font-size: 1.8rem;
    }
    
    .action-grid {
        grid-template-columns: 1fr;
    }
}

/* ==========================
   ANIMATIONS
========================== */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.content-card {
    animation: fadeInUp 0.5s ease-out;
}

.content-card:nth-child(2) {
    animation-delay: 0.1s;
}

.content-card:nth-child(3) {
    animation-delay: 0.2s;
}
</style>
{% endblock %}

{% block body %}
<!-- Hero Banner -->
<div class="hero-banner">
    <div class="container">
        <div class="profile-header">
            <div class="profile-avatar">
                <i class="fas fa-user-tie"></i>
            </div>
            <div class="profile-info">
                <h1>{{ user.prenom }} {{ user.nom }}</h1>
                <p class="subtitle">✨ Prestataire professionnel</p>

                {% set statut = prestataire.statutdisponible %}
                {% if statut == 'disponible' %}
                    <span class="status-badge disponible">
                        <span class="status-indicator" style="background: #28c76f;"></span>
                        Disponible
                    </span>
                {% elseif statut == 'occupe' %}
                    <span class="status-badge occupe">
                        <span class="status-indicator" style="background: #ffb142;"></span>
                        Occupé
                    </span>
                {% else %}
                    <span class="status-badge vacances">
                        <span class="status-indicator" style="background: #95a5a6;"></span>
                        En vacances
                    </span>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="container my-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="quick-actions">
                <h6><i class="fas fa-bolt me-2"></i>Actions rapides</h6>
                <div class="action-grid">
                    <a href="#" class="action-btn"><i class="fas fa-calendar-alt"></i>Mes missions</a>
                    <a href="#" class="action-btn"><i class="fas fa-envelope"></i>Messages</a>
                    <a href="#" class="action-btn"><i class="fas fa-credit-card"></i>Paiements</a>
                    <a href="#" class="action-btn"><i class="fas fa-chart-line"></i>Statistiques</a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <!-- Stats -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon yellow"><i class="fas fa-star"></i></div>
                    <div class="stat-value">{{ prestataire.note|default(0) }}/5</div>
                    <div class="stat-label">Note moyenne</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon blue"><i class="fas fa-comments"></i></div>
                    <div class="stat-value">{{ prestataire.nombreavis|default(0) }}</div>
                    <div class="stat-label">Avis reçus</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon green"><i class="fas fa-euro-sign"></i></div>
                    <div class="stat-value">{{ prestataire.tarifHoraire|default(0) }}€</div>
                    <div class="stat-label">Tarif horaire</div>
                </div>
            </div>

            <!-- User Form -->
            <div class="content-card">
                <div class="card-header-custom">
                    <h5><i class="fas fa-user"></i> Informations personnelles</h5>
                </div>
                <div class="card-body-custom">
                    {{ form_start(userForm) }}
                    <div class="row g-4">
                        <div class="col-md-6">{{ form_row(userForm.nom) }}</div>
                        <div class="col-md-6">{{ form_row(userForm.prenom) }}</div>
                    </div>
                    <div class="mb-4">{{ form_row(userForm.email) }}</div>

                    <hr class="my-4">
                    <h6><i class="fas fa-lock me-2"></i>Modifier le mot de passe</h6>
                    <div class="row g-4">
                        <div class="col-md-6">{{ form_row(userForm.plainPassword.first) }}</div>
                        <div class="col-md-6">{{ form_row(userForm.plainPassword.second) }}</div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-save me-2"></i> Enregistrer les modifications
                        </button>
                    </div>
                    {{ form_end(userForm) }}
                </div>
            </div>

            <!-- Prestataire Form -->
            <div class="content-card">
                <div class="card-header-custom">
                    <h5><i class="fas fa-briefcase"></i> Profil professionnel</h5>
                </div>
                <div class="card-body-custom">
                    {{ form_start(prestataireForm) }}
                    <div class="mb-3">{{ form_row(prestataireForm.biographie) }}</div>
                    <div class="mb-3">{{ form_row(prestataireForm.competences) }}</div>
                    <div class="row g-4">
                        <div class="col-md-6">{{ form_row(prestataireForm.tarifHoraire) }}</div>
                        <div class="col-md-6">{{ form_row(prestataireForm.statutdisponible) }}</div>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-check-circle me-2"></i> Mettre à jour le profil
                        </button>
                    </div>
                    {{ form_end(prestataireForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}